package main

import (
	"log"
	"net"

	pb "google.golang.org/grpc/examples/reverse/reverse"
	"golang.org/x/net/context"
	"google.golang.org/grpc"

	"google.golang.org/grpc/reflection"
)

const (
	port = ":50051"
)

type server struct{}

func (s *server) ReverseString(ctx context.Context, in *pb.ReverseRequest) (*pb.ReverseReply, error) {
	// your reverse string implementation here
	/*runes := []rune(in.Data)
    	for i, j := 0, len(runes)-1; i < j; i, j = i+1, j-1 {
        	runes[i], runes[j] = runes[j], runes[i]
	}*/

	var reverse string
    	for i := len(in.Data)-1; i >= 0; i-- {
        	reverse += string(in.Data[i])
    	}
	
	return &pb.ReverseReply{Reversed: string(reverse)}, nil
}

func main() {
	lis, err := net.Listen("tcp", port)
	if err != nil {
		log.Fatalf("failed to listen: %v", err)
	}
	s := grpc.NewServer()
	pb.RegisterReverseServiceServer(s, &server{})
	reflection.Register(s)
	if err := s.Serve(lis); err != nil {
		log.Fatalf("failed to server: %v", err)
	}
}
